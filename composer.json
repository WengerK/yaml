{
    "name": "dallgoot/yaml",
    "description": "Provides loader, dumper and an API for YAML content. Loader builds to equivalent data types in PHP 7.3",
    "type": "library",
    "keywords": ["yaml"],
    "homepage": "https://github.com/dallgoot/yaml",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "dallgoot",
            "email": "stephane.rebai@gmail.com"
        }
    ],
      "autoload": {
        "classmap": [
          "sources"
        ]
    },
      "autoload-dev": {
        "classmap": [
          "tests/CasesTest.php",
          "tests/DumpingTest.php",
          "tests/SymfonyYamlTest.php",
          "tests/units",
          "vendor/phpunit"
        ]
    },
    "require": {
        "php": ">=7.3.2",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-SPL": "*",
        "lib-pcre": "*"
    },
    "require-dev": {
        "ext-Reflection": "*",
        "phpunit/phpunit": "^8.1",
        "phan/phan": "^1.3",
        "theseer/phpdox": "^0.12.0",
        "roave/better-reflection": "dev-master#c87d856",
        "composer/xdebug-handler": "^1.3",
        "phploc/phploc": "^4.0",
        "paulthebaud/phpunit-generator": "^2.1",
        "phpmetrics/phpmetrics": "^2.4"
    },
    "scripts" : {
        "test"    : "phpunit --configuration ./configuration/phpunit.xml --testsuite All",
        "metrics" : "phpmetrics --report-html=documentation/phpmetrics_report ./sources",
        "phploc"  : "phploc sources/ --count-tests --log-xml=./documentation/codecoverage/phploc.xml",
        "docs"    : "phpdox -f configuration/phpdox.xml",
        "phan"    : "phan -k configuration/phan.php -C -j2 -3sources/tag"
    }
}
