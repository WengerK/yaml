{
    "name": "dallgoot/yaml",
    "description": "Provides loader, dumper and an API for YAML files. Loader builds to equivalent data types in PHP 7.3",
    "type": "library",
    "license": "Apache-2.0",
    "config": {
        "vendor-dir":"dependencies"
    },
    "authors": [
        {
            "name": "dallgoot",
            "email": "stephane.rebai@gmail.com"
        }
    ],
      "autoload": {
        "classmap": [
          "sources",
          "tests"
        ]
    },
    "require": {
        "php": ">=7.3.2",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-Reflection": "*",
        "ext-SPL": "*",
        "lib-pcre": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phan/phan": "*",
        "symfony/yaml": "*",
        "phpmetrics/phpmetrics": "*",
        "roave/better-reflection": "dev-master#c87d856",
        "daux/daux.io": "^0.8.1"
    },
    "scripts" : {
        "test" : "phpunit --configuration ./configuration/phpunit.xml --columns max --testsuite cases --no-logging --coverage-xml ./documentation/coverage.xml"
    }
}
