{
    "name": "dallgoot/yaml",
    "description": "Provides loader, dumper and an API for YAML files. Loader builds to equivalent data types in PHP 7.3",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "dallgoot",
            "email": "stephane.rebai@gmail.com"
        }
    ],
      "autoload": {
        "classmap": [
          "sources"
        ]
    },
      "autoload-dev": {
        "classmap": [
          "tests"
        ]
    },
    "require": {
        "php": ">=7.3.2",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-SPL": "*",
        "lib-pcre": "*"
    },
    "require-dev": {
        "ext-Reflection": "*",
        "phpunit/phpunit": "*",
        "phan/phan": "*",
        "theseer/phpdox": "^0.12.0",
        "phpmetrics/phpmetrics": "*",
        "roave/better-reflection": "dev-master#c87d856",
        "composer/xdebug-handler": "^1.3",
        "phploc/phploc": "^4.0",
        "paulthebaud/phpunit-generator": "^2.1"
    },
    "scripts" : {
        "test"    : "phpunit --configuration ./configuration/phpunit.xml --testsuite all",
        "metrics" : "phpmetrics --report-html=documentation/phpmetrics_report ./sources",
        "phploc"  : "phploc sources/ --count-tests --log-xml=./documentation/codecoverage/phploc.xml",
        "docs"    : "phpdox -f configuration/phpdox.xml"
    }
}
